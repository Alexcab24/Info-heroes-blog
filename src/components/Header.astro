---
import { LINK } from "../content/superHeroes";
---

<nav
  class="mx-auto lg:w-[900px] w-full border-b-2 bg-background-header rounded-b-2xl animate-fade-in"
>
  <div class="flex flex-wrap items-center justify-between px-4">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse hover:drop-shadow-xl">
      <span
        id="HeaderFont"
        class="self-center text-5xl md:text-4xl whitespace-nowrap dark:text-white"
        >InfoHeroes Blog</span
      >
    </a>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul class="flex justify-center space-x-8">
        {Object.values(LINK).map((link) => (
          <li  class="flex items-center">
            <a href={link.link} class="block">
              <img src={link.logo} alt={link.alt} class = {`${link.sizeH} hover:drop-shadow-xl`} />
            </a>
          </li>
        ))}
      </ul>
    </div>
    
  </div>
</nav>
