---
import {superheroes} from '../content/superHeroes.js'



let heroe = superheroes.sort()
---


<section class="flex flex-wrap">
    {
       heroe.map((hero) => (
        <div class="w-[280px]  border border-gray-200 rounded-lg shadow m-2">
        <a href="#">
            <img class="rounded-lg m-3" src={hero.image} alt=""  />
        </a>
        <div class="p-3">
            {hero.comic.map((tag) => (
        //         <span 
        //     class={`${tag.class} text-sm font-medium me-2 px-2.5 py-0.5 rounded`}>
        //     {tag.name}
        //   </span>
                <img src={tag.logo} alt={tag.name} class={tag.class}/>
            ))}
            <a href="#">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{hero.name}</h5>
            </a>
            <p class="mb-3 font-normal text-gray-700">{hero.firstApparence}</p>
        </div>
    </div>
        ))
    }
  
    
</section>
