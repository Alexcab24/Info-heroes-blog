---
import {superheroes} from '../content/superHeroes.js'



let heroe = superheroes.sort()
---

<section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-4 justify-center mx-10">
    {
       heroe.map((hero) => (
        <div class="relative border border-gray-200 rounded-lg shadow bg-white">
            <div class="m-3 relative max-w-xs overflow-hidden bg-cover bg-no-repeat h-[170px] rounded-lg">
                <a href="#">
                <img class="object-cover object-top rounded-lg w-full h-[170px] transition duration-500 sm:h-full md:scale-110 md:hover:scale-105" loading="lazy"  src={hero.image} alt="" />
            </a>
                </div>
           
            <div class="p-3">
                <div class="flex flex-wrap gap-2">
                    {hero.comic.map((tag) => (
                        <img src={tag.logo} alt={tag.name} class={tag.class} />
                    ))}
                </div>
                <a href="#">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{hero.name}</h5>
                </a>
                <p class="mb-3 font-normal text-gray-700">{hero.firstApparence}</p>
            </div>
        </div>
        ))
    }
</section>
